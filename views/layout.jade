//- layout.jade
doctype html
html(lang='en')
  head
    block title
      title (Very simple) Lisbon Travel Advisor
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')
    link(rel='icon', href='/images/favicon.ico', type='image/x-icon')
    link(rel='stylesheet', href='/css/watson-bootstrap-dark.css')
    link(rel='stylesheet', href='/css/banner.css')
    link(rel='stylesheet', href='/css/style.css')
    block extra-stylesheet

  body.claro
    div.row.service-container
      div.service-header
        div.row.top-nav
          div.container
            h3.heading.left IBM 
              span.text-right Nice Bluemix Garage
        div.row.header
          div.container
            div.avatar.img-container.col-lg-2.col-md-2.col-sm-2.hidden-xs
              img.service-icon(src='/images/lisbon.png')
            div.col-lg-10.col-md-10.col-sm-10.dialog-description
              h2.service-title (Very simple) Lisbon Travel Advisor
              p Sample app to showcase Bluemix Watson services 
      block row-content

    script(type='text/javascript', src='/js/jquery-1.11.1.min.js')
    script(type='text/javascript', src='/js/index.js')
    block extra-scripts
